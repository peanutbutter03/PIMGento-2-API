<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <pimgento>
            <akeneo_api>
                <base_url>http://demo.akeneo.com/</base_url>
                <username>admin</username>
                <client_id>1_demo_client_id</client_id>
                <client_secret>demo_secret</client_secret>
                <is_enterprise>0</is_enterprise>
                <pagination_size>100</pagination_size>
            </akeneo_api>
            <products_filters>
                <mode>standard</mode>
                <completeness_type>=</completeness_type>
                <completeness_value>100</completeness_value>
                <status>1</status>
            </products_filters>
            <product>
                <url_generation_enabled>1</url_generation_enabled>
            </product>
            <category>
                <is_active>1</is_active>
                <include_in_menu>1</include_in_menu>
                <is_anchor>1</is_anchor>
            </category>
            <slack>
                <enable>0</enable>
                <token></token>
                <username>Pimgento</username>
                <channel></channel>
            </slack>
        </pimgento>
    </default>
</config>
